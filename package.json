{
  "name": "big-monorepo-starter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter mobile start --clear",
    "dev:server": "pnpm --filter server dev",
    "dev:web-server": "concurrently \"pnpm dev:web\" \"pnpm dev:server\"",
    "dev:mobile-server": "concurrently -k \"pnpm dev:server\" \"pnpm dev:mobile\"",
    "dev:all": "concurrently \"pnpm dev:web\" \"pnpm dev:server\" \"pnpm dev:mobile\"",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "concurrently": "^8.2.2"
  }
}
